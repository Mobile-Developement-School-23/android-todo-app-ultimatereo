<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.android_todo_app_ultimatereo.presentation.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_addFragment"
            app:destination="@id/addFragment">
            <argument
                android:name="itemId"
                android:defaultValue="@null" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.android_todo_app_ultimatereo.presentation.add.AddFragment"
        android:label="fragment_add_screen"
        tools:layout="@layout/fragment_add_screen">
        <argument
            android:name="itemId"
            app:argType="string"
            app:nullable="true" />
    </fragment>

</navigation>